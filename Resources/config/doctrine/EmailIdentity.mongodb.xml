<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="San\EmailBundle\Document\EmailIdentity" collection="san_email_identity">
        <field fieldName="id" id="true" />
        <field fieldName="description" type="string" />
        <field fieldName="fromName" type="string" />
        <field fieldName="fromEmail" type="string" />
        <field fieldName="replyToEmail" type="string" />
        <field fieldName="address" type="string" />
        <field fieldName="city" type="string" />
        <field fieldName="state" type="string" />
        <field fieldName="zip" type="string" />
        <field fieldName="country" type="string" />
    </document>

</doctrine-mongo-mapping>
