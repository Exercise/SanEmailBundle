<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="san.admin.email" class="San\EmailBundle\Admin\EmailAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Email" label="Email"/>
            <tag name="san.admin" />
            <argument />
            <argument>San\EmailBundle\Entity\Email</argument>
            <argument>SanEmailBundle:Admin/EmailCRUD</argument>
            <call method="setTranslationDomain">
                <argument>SanEmailBundle</argument>
            </call>
            <call method="setTemplate">
                <argument>send</argument>
                <argument>SanEmailBundle:Admin/CRUD:email_send.html.twig</argument>
            </call>
        </service>

        <service id="san.admin.email_send" class="San\EmailBundle\Admin\EmailSendAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Email" label="Email Send"/>
            <tag name="san.admin" />
            <argument />
            <argument>San\EmailBundle\Entity\EmailSend</argument>
            <argument></argument>
            <call method="setTranslationDomain">
                <argument>SanEmailBundle</argument>
            </call>
        </service>

        <service id="san.admin.email_identity" class="San\EmailBundle\Admin\EmailIdentityAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Email" label="Email Identity"/>
            <tag name="san.admin" />
            <argument />
            <argument>San\EmailBundle\Entity\EmailIdentity</argument>
            <argument></argument>
            <call method="setTranslationDomain">
                <argument>SanEmailBundle</argument>
            </call>
            <call method="setSendgrid">
                <argument type="service" id="exercise.sendgrid" />
            </call>
        </service>

    </services>
</container>
