<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="san.email.sender.class">San\EmailBundle\Sender</parameter>
    </parameters>

    <services>
        <service id="san.email.sender" class="%san.email.sender.class%">
            <tag name="kernel.event_listener" event="kernel.terminate" method="onKernelTerminate" />
            <argument type="service" id="exercise.sendgrid" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="san.admin.user_dynamic_list" strict="false" />
        </service>
    </services>

</container>
